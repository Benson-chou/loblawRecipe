    <div class="items">
        <h2>Select items you want or let us pick the optimal combo for you!</h2>
        <section id="table">
            <div class="table">
                <form id="itemsForm" action="/home/process_items" method="post">
                    <table id="headers">
                        <thead>
                            <th id="checkbox"><button type="button" class="select-all" onclick="selectAll()">Select all</button></th>
                            <th id="itemname">Item Name</th>
                            <th id="bonuspoints">Bonus Value</th>
                            <th id="condition">Condition</th>
                        </thead>
                        <tbody>
                            <% if(items) {%>
                                <% items.forEach(item=> { %>
                                    <tr>
                                        <td><input type="checkbox" name="itemCheckbox" value="<%= item.itemname %>"></td>
                                        <td><%= item.itemname %></td>
                                        <td><%= item.bonuspoints %></td>
                                        <td><%= item.condition %></td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                    <input type="submit" value="Submit" name="items">
                </form>
            </div>
        </section>
        <section id="parameters">
            <div class="table">
                <form id="parameters" action="/parameters" method="post">
                    <!-- test -->
                    <label for="Creativity">Creativity: </label>
                    <div class="creativity-container">
                        <input type="range" min="0" max="10" step="1" value="0" name="creativity" oninput="this.nextElementSibling.value = this.value">
                        <output>0</output>
                    </div>
                    <label for="Budget">Budget (CAD): </label>
                    <input type="text" min="0" name = budget id="budget">
                    <label for="additional"> Additional requests (Allergies):</label>
                    <% if(allergies) {%>
                        <input type="text" name="allergies" value="<%=allergies%>" placeholder="Allergies">
                    <% } else{ %>
                        <input type="text" name="allergies" placeholder="Allergies">
                    <% } %>
                </form>
            </div>    
        </section>
    </div>
</body>