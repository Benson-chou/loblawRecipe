    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 8px;
        }
    </style>
    <script>
        function selectAll() {
            var checkboxes = document.querySelectorAll('input[type="checkbox"]');
            var button = document.querySelector('.select-all');
            let allChecked = true;
            for (let box of checkboxes) {
                if (box.checked == false) allChecked = false; 
            }
            if (allChecked == true) {
                button.textContent = 'Select all'
                checkboxes.forEach(box => box.click())
            } else {
                checkboxes.forEach(box => {
                    if (box.checked == false) box.click()
                    button.textContent = 'Deselect all'
                })
            }
        }
        function savebutton() {
            var save_button = document.querySelector('.save_button');
            console.log(save_button.children)
            console.log(save_button.childNodes[0].nextSibling.className)
            var icon_class = save_button.childNodes[0].nextSibling.className
            // This works but not sure y regular and solid looks the same :(
            if (icon_class === "fa fa-regular fa-bookmark") {
                save_button.childNodes[0].nextSibling.className = "fa fa-solid fa-flag"
                // Save the recipe here
                saverecipe()
            } else {
                save_button.childNodes[0].nextSibling.className = "fa fa-regular fa-bookmark"
                // Delete the recipe here 
                deleterecipe()
            }
        }
    </script>
    <script type="text/javascript" src="/home.js"></script>
</head>

