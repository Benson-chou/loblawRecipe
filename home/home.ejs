<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1">
    <title>Login</title>
    <!-- the form awesome library is used to add icons to our form -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
    <!-- include the stylesheet file -->
    <link href="/login.css" rel="stylesheet" type="text/css">
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 8px;
        }
    </style>
</head>

<body>
    <div class="header-container">
        <div class="header">
            <div class="logo">Logo placeholder</div>
            <ul class="links">
                <li><a href="/">Login</a></li>
                <li><a href="../signup/">Sign up</a></li>
                <li>
                    <div class="github">
                        <a href="https://github.com/Benson-chou/loblawRecipe" target="_blank">
                            <img class="cat-logo" src="/github-mark-white.png" alt="GitHub Cat Logo">
                            <img class="text-logo" src="/GitHub_Logo_White.png" alt="GitHub Text Logo">
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="location">
        <form id="locationBox" action="/location" method="post">
            <label for="postal code">Location: </label>
            <% if(location){%>
                <input type="text" name="postal code" value="<%=location%>" placeholder="Postal Code">
            <% } else{ %>
                <input type="text" name="postal code" placeholder="Postal Code">
            <% } %>
            <input type="submit" name="location" value="Search">
        </form>
        <!-- The table goes here -->
         <h2>Select items you want or let us pick the optimal combo for you!</h2>
        <section id="table">
            <div class="table">
                <form id="itemsForm" action="/process-items" method="post">
                    <table id="headers">
                        <thead>
                            <th id="checkbox">Selections</th>
                            <th id="itemname">Item Name</th>
                            <th id="bonuspoints">Bonus Points</th>
                            <th id="condition">Condition</th>
                        </thead>
                        <tbody>
                            <% if(items){%>
                                <% items.forEach(item=> { %>
                                    <tr>
                                        <td><input type="checkbox" name="selectItem"></td>
                                        <td><%= item.itemname %></td>
                                        <td><%= item.bonuspoints %></td>
                                        <td><%= item.condition %></td>
                                    </tr>
                                <% }); %>
                            <%} else {%>
                                <tr>
                                    <td rowspan="4"> Please enter a location!</td>
                                </tr>
                            <% }%>
                        </tbody>
                    </table>
                </form>
            </div>
            <!-- <% if (items){%>
                <% for(var i = 0; i < items.rows.length; i++) { %>
                        <form class="tr" action="/itemForm">
                            <input type="checkbox" name="tickbox" checked="{{this}}">
                            <input type="text" name="itemname" class="td" value= <%= items.rows[i].itemname %>>
                            <input type="text" name="bonuspoints" class="td" value= <%= items.rows[i].bonuspoints %>>
                            <input type="text" name="condition" class="td" value= <%= items.rows[i].condition %>>
                            <input type="submit" name="updateBtn" id="updateBtn" value="update" class="td">
                        </form>
                <% } %>   -->
        </section>
        <section id="parameters">
            <label for="Creativity">Creativity: </label>
            <input type="range" min="0" max="1" name="creativity">
            <label for="Budget">Budget (CAD): </label>
            <input type="text" min="0" name = budget id="budget">
            <label for="additional"> Additional requests (Allergies):</label>
            <% if(allergies){%>
                <input type="text" name="allergies" value="<%=allergies%>" placeholder="Allergies">
            <% } else{ %>
                <input type="text" name="allergies" placeholder="Allergies">
            <% } %>
        </section>
    </div>
</body>